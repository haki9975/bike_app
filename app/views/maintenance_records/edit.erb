<form action="/users/<%= @users.id %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">
    <input type="text" name="users[name]" value="<%= @users.name %>" placeholder="Name"><br><br>
    <input type="text" name="users[email]" value="<%= @users.email %>" placeholder="Email"><br><br>
    <input type="text" name="users[password]" value="<%= @users.password %>" placeholder="Password"><br><br>
    <textarea type="text" name="users[bikes]" value="<%= @users.bikes %>" placeholder="Bikes"></textarea><br><br>
    <input type="submit" value="Update Record">
</form>